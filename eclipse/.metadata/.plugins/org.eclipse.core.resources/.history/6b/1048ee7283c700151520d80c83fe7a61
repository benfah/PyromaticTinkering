package me.benfah.benfahsmod.items.pyro.wand;

import java.util.Set;

import com.google.common.collect.Sets;

import me.benfah.benfahsmod.init.BenfahsItems;
import net.minecraft.block.Block;
import net.minecraft.init.Blocks;
import net.minecraft.item.ItemStack;
import net.minecraft.item.ItemTool;

public class ItemPyroWand extends ItemTool{
	
    private static final Set AXE_BLOCKS = Sets.newHashSet(new Block[] {Blocks.planks, Blocks.bookshelf, Blocks.log, Blocks.log2, Blocks.chest, Blocks.pumpkin, Blocks.lit_pumpkin});
    
	
	public ItemPyroWand(ToolMaterial p_i45333_2_) {
		super(3.0F, p_i45333_2_, AXE_BLOCKS);
		
		setUnlocalizedName("pyro_wand");
	}
	@Override
	public float getDigSpeed(ItemStack stack, Block block, int meta) {

		if(BenfahsItems.blockWandSet.contains(block))
		{
			System.out.println("test");


			if(stack.hasTagCompound())
			{
				if(stack.stackTagCompound.getFloat("miningspeed") != 0.0F)
				{
					
					return stack.stackTagCompound.getFloat("miningspeed");
					
				}
				
			}
			
			
			
			return efficiencyOnProperMaterial;
		}
		
		return 1.0F;
	}

	
	@Override
	public boolean requiresMultipleRenderPasses() {
		return true;
	}
	
	@Override
	public int getRenderPasses(int metadata) {
		return 2;
	}
}
