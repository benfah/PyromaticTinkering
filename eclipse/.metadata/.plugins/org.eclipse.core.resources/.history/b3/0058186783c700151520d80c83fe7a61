public class ItemPyroWand extends ItemPickaxe{
	
	public ItemPyroWand(ToolMaterial p_i45333_2_) {
		super(p_i45333_2_);
		setUnlocalizedName("pyro_wand");
	}
	@Override
	public float getDigSpeed(ItemStack stack, Block block, int meta) {

		if(BenfahsItems.blockWandSet.contains(block))
		{
			System.out.println("test");


			if(stack.hasTagCompound())
			{
				if(stack.stackTagCompound.getFloat("miningspeed") != 0.0F)
				{
					
					return stack.stackTagCompound.getFloat("miningspeed");
					
				}
				
			}
			
			
			
			return efficiencyOnProperMaterial;
		}
		
		return 1.0F;
	}

	
	@Override
	public boolean requiresMultipleRenderPasses() {
		return true;
	}
	
	@Override
	public int getRenderPasses(int metadata) {
		return 2;
	}
}
